#!/usr/bin/make -f

#export DH_VERBOSE=1

PYVERSIONS=2.3 2.4
# default is first version
DEFAULTPY=$(shell echo $(PYVERSIONS) | sed 's/ .*//')

build: build-stamp

build-stamp:
	dh_testdir
	for v in $(PYVERSIONS) ; do \
		python$$v setup.py build ; \
	done
	epydoc build/lib*$(DEFAULTPY)/gammu.so
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	for v in $(PYVERSIONS) ; do \
		python$$v setup.py clean || true; \
	done
	-rm -rf build
	-rm -rf html
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	for v in $(PYVERSIONS) ; do \
		PYTHON=python$$v ; \
		PYTMP="debian/$$PYTHON-gammu" ; \
		$$PYTHON setup.py install --no-compile --root=$$PYTMP ; \
	done

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples  -i
	dh_strip -i
	dh_compress -i
	dh_fixperms -i
	dh_python -i
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs -a
	dh_installdocs -a
	dh_installexamples  -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_python -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: build clean binary-indep binary-arch binary install configure
