	CLI="gammu "+DebugLevel+" --copybitmap "+LogoFilePathOp+LogoFileNameOp+" "+fileName+" "+add
else
	add="STARTUP"
	CLI="gammu "+DebugLevel+" --copybitmap "+LogoFilePath+LogoFileName+" "+fileName+" "+add
end if
    frame.SetStatusText("GAMMU command line:   "+CLI)
	shell(CLI)
	GammuShowOutput()
