function GammuShowOutput()
OutputText.Clear
' shell("gammu "+DebugLevel+" "+param$+" > gammu.tmp")
 open "gammu.tmp" for input as #1
conta=0
 While (Not Eof( 1 )) And (conta<100)
  conta=conta+1
  Line Input #1,riga
  OutputText.AppendText(left$(riga,len(riga)-1)+chr$(13)+chr$(10))
 End While
 Close(1)
end function

' --IDENTIFY
function Identify(event)
	OutputText.Clear
	CLI="gammu "+DebugLevel+" --identify > gammu.tmp"
	frame.SetStatusText("GAMMU command line:  "+CLI)
	shell(CLI)
	 open "gammu.tmp" for input as #1
	conta=0
 	While (Not Eof( 1 )) And (conta<100)
  		conta=conta+1
  		Line Input #1,riga
  		OutputText.AppendText(riga+chr$(13))
		if len(riga)<40 then
	 		test=New wxStaticText(tabMain,-1,riga,wxPoint(310,10+conta*15),wxSize(250,15),1,"")
 		end if
 	End While
 Close(1)
end function
