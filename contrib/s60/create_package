#!/bin/sh
# Create series60-remote.sis

PYS60DIR=~/PythonForS60
VERSION=0.4.80
CURDIR=$PWD


mkdir tmp

cp *.py tmp/

cd $PYS60DIR

python2.5 $PYS60DIR/ensymble.py py2sis \
    --appname="Series60 - Remote" \
    --version=$VERSION \
    --lang=EN \
    --shortcaption="S60-Remote" \
    --caption="Series60 - Remote" \
    --vendor="Gammu team" \
    --caps=LocalServices+Location+ReadUserData+WriteUserData+WriteUserData+NetworkServices+UserEnvironment \
    --icon="$CURDIR/icon.svg" \
    --verbose \
    $CURDIR/tmp \
    $CURDIR/series60-remote.sis

cd $CURDIR

rm -rf tmp
