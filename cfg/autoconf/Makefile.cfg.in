
# ------------- Makefile options, which depens on OS --------------------------

VERSION		= @VERSION@

LIBGAMMU            = @LIBGAMMU@
LIBGAMMU_FULLNAME   = @LIBGAMMU_FULLNAME@
LIBGAMMU_MJR_NAME   = @LIBGAMMU_MJR_NAME@
LIBGAMMU_SHRTNAME   = @LIBGAMMU_SHRTNAME@
LIBGAMMU_STATIC     = @LIBGAMMU_STATIC@
LDFLAGS_SHAREDLIB   = @LDFLAGS_SHAREDLIB@

# what is used to delete files, compile, install and find
RM              = @RM@ -f
MV              = @MV@ -f
CP              = @CP@
LN              = @LN@ -f
ECHO            = @ECHO@
CC              = @CC@
CFLAGS          = @CFLAGS@
GAMMU_CFLAGS    = @GAMMU_CFLAGS@
LDLIBS          = @LDLIBS@
GAMMU_LIBS      = @GAMMU_LIBS@
SMSD_LIBS       = @SMSD_LIBS@
INSTALL         = @INSTALL@
FIND            = @FIND@
RPMBUILD        = @RPMBUILD@
DOXYGEN         = @DOXYGEN@
AR              = @AR@
RANLIB          = @RANLIB@
FAKEROOT        = @FAKEROOT@
CHECKINSTALL    = @CHECKINSTALL@

# where to install binary, documentation, man and shared library files
# where is temporary directory and directory for making RPM
prefix          = @prefix@
exec_prefix     = @exec_prefix@
INSTALL_BIN_DIR	= @bindir@
INSTALL_DOC_DIR = @DOC_DIR@
INSTALL_LOC_DIR = @LOCALE_DIR@
INSTALL_MAN_DIR = @mandir@/man1
INSTALL_LIB_DIR = @libdir@
INSTALL_H_DIR	= @includedir@/gammu
RPM_DIR         = @RPM_DIR@
TEMP_DIR        = @TEMP_DIR@

CFLAGS         += -DLOCALE_PATH="\"${INSTALL_LOC_DIR}\""

# use these 2 in DJGPP:
# CFLAGS        = -Wall -Wno-format-y2k
# LDLIBS        = 

# disable pointer signedness warnings in gcc 4.0
# source - Linux kernel
check_gcc = $(shell if $(CC) $(1) -S -o /dev/null -xc /dev/null > /dev/null 2>&1; then echo "$(1)"; else echo "$(2)"; fi)

CFLAGS += $(call check_gcc,-Wno-pointer-sign,)
